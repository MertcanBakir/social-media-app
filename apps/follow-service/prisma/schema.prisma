generator client {
  provider        = "prisma-client-js"
  output          = "../generated"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Follow {
  id         String   @id @default(uuid())
  followerId String  
  followingId String

  createdAt  DateTime @default(now())

  @@unique([followerId, followingId])
  @@map("follows")
}